<?xml version="1.0" encoding="utf-8"?>



    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/inter"
                android:text="DandyDrop"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="Share with any device you prefer." />

            <Button
                android:id="@+id/immediateStop"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:fontFamily="@font/inter"
                android:textColor="@color/white"
                android:background="@drawable/button"
                app:backgroundTint="@null"
                android:layout_marginTop="15dp"
                android:textSize="14dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="Stop" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_section"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="40dp"
            android:paddingVertical="25dp"
            android:paddingHorizontal="20dp"
            >
            <LinearLayout
                android:id="@+id/firststep"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step 1"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView5"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ensure that both your device and the devices you want to share with are connected to the same network."
                android:textSize="16dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/firststepdone"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/rounder_button"
                android:fontFamily="@font/inter"
                android:gravity="center|center_vertical"
                android:paddingLeft="20dp"
                android:paddingTop="0dp"
                android:paddingRight="20dp"
                android:paddingBottom="0dp"
                android:text="Done"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:layout_marginTop="20sp"
                app:backgroundTint="@null"
                app:layout_alignSelf="center" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/secondstep"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Step 2"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/urlQR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:maxWidth="270dp"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="or visit:"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/thelink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="http://192.168.0.169:8080"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/refresh_ip"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/rounder_button"
                    android:fontFamily="@font/inter"
                    android:gravity="center|center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="0dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="0dp"
                    android:text="Refresh"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:layout_marginTop="20sp"
                    app:backgroundTint="@null"
                    android:layout_gravity="center"
                    app:layout_alignSelf="center" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_section"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:paddingVertical="25dp"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="15dp">




            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/flexBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center_vertical"
                android:background="@color/light_black">

                <TextView
                    android:id="@+id/filecount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:gravity="start|center_vertical"
                    android:text="Sharing: 2 Files"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/deleteSelected"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/rounder_button"
                    android:fontFamily="@font/inter"
                    android:gravity="end|center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="0dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="0dp"
                    android:text="Delete selected"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:backgroundTint="@null"
                    app:layout_alignSelf="center" />

            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/titleFlexBox"
                android:layout_below="@+id/flexBox"
                android:layout_marginTop="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/light_black">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="35"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/fileNameTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        android:text="File Name"
                        android:layout_marginLeft="38sp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="65"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/fileSizeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        android:text="Size"
                        android:paddingLeft="15sp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleFlexBox"
                android:clipToPadding="false" />

            <Button
                android:id="@+id/morefiles"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="20sp"
                android:background="@drawable/morefile"
                app:backgroundTint="@null"
                android:text="More File"
                android:textColor="#7B7B7B"
                android:layout_below="@+id/recyclerView"></Button>

        </RelativeLayout>
    </LinearLayout>

    </androidx.core.widget.NestedScrollView>
